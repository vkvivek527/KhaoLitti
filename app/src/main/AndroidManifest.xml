<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.khaolitti.khao">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kllogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/circlekllogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PrivacyPolicy"></activity>
        <activity
            android:name=".NotificationActivity"
            android:theme="@style/Mytheme"></activity>
        <activity
            android:name=".SearchActivity"
            android:theme="@style/Mytheme"></activity>
        <activity
            android:name=".UpdateUserInfoActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".OTPVerificationActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".OrderConfirmationActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".ViewAllActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".MyAddressActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".AddAddressActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".DeliveryActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".OrderDetailsActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".ProductDetailsActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".CategoryActivity"
            android:theme="@style/Mytheme" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PhoneActivity"
            android:theme="@style/Phonetheme" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Mytheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:theme="@style/Mytheme"
            tools:replace="android:theme" />

        <service
            android:name=".MyMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>